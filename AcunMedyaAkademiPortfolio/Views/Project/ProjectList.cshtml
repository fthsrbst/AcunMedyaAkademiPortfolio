@model List<AcunMedyaAkademiPortfolio.Models.TblProject>

@{
    ViewBag.Title = "ProjectList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Projeler Listesi</h2>
<a href="/Project/CreateProject" class="btn btn-outline-primary">Yeni Proje Ekle</a>

<table class="table table-bordered" style="width: 100%;">
    <tr>
        <th>Proje ID</th>
        <th>Proje Açıklaması</th>
        <th>Proje Resim Yolu</th>
        <th>Proje Categorisi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>
            <td>@item.TblCategory.CategoryName</td>
            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>