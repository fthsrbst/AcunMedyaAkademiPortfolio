@model List<AcunMedyaAkademiPortfolio.Models.TblService>

@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h2>Service Listesi</h2>
<a href="/Service/CreateService" class="btn btn-outline-primary">Yeni Service Ekle</a>

<table class="table table-bordered" style="width: 100%;">
    <tr>
        <th>Service ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim Yolu</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px ; height:150px" /></td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>