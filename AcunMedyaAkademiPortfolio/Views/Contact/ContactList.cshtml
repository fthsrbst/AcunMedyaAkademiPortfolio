@model List<AcunMedyaAkademiPortfolio.Models.TblContact>
@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Mesaj Listesi</h2>

<table class="table table-bordered" style="width: 100%;">
    <tr>
        <th>Mesaj ID</th>
        <th>İsim-Soyisim</th>
        <th>E-Mail</th>
        <th>Telefon</th>
        <th>Mesajı Görüntüle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td>@item.Phone</td>
            <td><a href="#" class="btn btn-info">Mesajı Görüntüle</a></td>
            <td><a href="/Category/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
           
        </tr>
    }
</table>