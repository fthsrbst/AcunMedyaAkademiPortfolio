@model List<AcunMedyaAkademiPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda Listesi</h2>

<table class="table table-bordered" style="width: 100%;">
    <tr>
        <th>Hakkımda ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim Yolu</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>    
            <td>@item.AboutID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" class="img-fluid" style="width:200px ; height:150px" /></td>
            <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Sil</a></td>
        </tr>
    }
</table>
<a href="/About/CreateAbout/" class="btn btn-outline-primary">Hakkımda Ekle</a>
