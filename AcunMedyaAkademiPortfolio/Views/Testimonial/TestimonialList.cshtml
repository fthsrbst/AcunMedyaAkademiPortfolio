@model List<AcunMedyaAkademiPortfolio.Models.TblTestimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Listesi</h2>
<a href="/Testimonial/CreateTestimonial" class="btn btn-outline-primary">Yeni Testimonial Ekle</a>

<table class="table table-bordered" style="width: 100%;">
    <tr>
        <th>Testimonial ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Ad Soyad</th>
        <th>Image Url</th>
        <th>Job</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialID</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.NameSurname</td>
            <td>@item.ImageUrl</td>
            <td>@item.Job</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>